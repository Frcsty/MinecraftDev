plugins {
    id "java"
}

group = pluginGroup
version = pluginVersion

repositories {
    mavenCentral()
}

dependencies {
    testCompile group: "junit", name: "junit", version: "4.12"
}

processResources {
    from(sourceSets.main.resources.srcDirs) {
        filter org.apache.tools.ant.filters.ReplaceTokens, tokens: [version: version]
    }
}

sourceCompatibility = JavaVersion.VERSION_${BUILD_VERSION}
targetCompatibility = JavaVersion.VERSION_${BUILD_VERSION}
